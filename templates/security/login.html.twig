    <!-- Custom Theme Style -->
    <link href="{{asset('assets/build/css/custom.min.css')}}" rel="stylesheet">
  </head>

  <body class="login">
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <div class="p-1">
              <h3><img src="{{ asset('assets/images/logo.png') }}" alt="Logo" width="100"></h3>
            </div>
            <form method="post">
              {% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}
          
              {% if app.user %}
                  <div class="mb-3">
                      {{ app.user == null }}
                  </div>
              {% endif %}
              
              
                
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
          
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          
                <button class="btn btn-lg btn-dark" type="submit"> Connexion</button>
            </form>
            <div class="clearfix"></div>

            <div class="separator">

              <div class="clearfix"></div>
              <br />

              <div>
                <h1><i class="fa fa-paw"></i> GRM </h1>
                <div class="pull-right">
                  Minist√®re du Commerce de la Consommation et des PME <img src="{{asset('assets/images/logo.png')}}" width="20" alt=""> Designed By Alou 
                </div>
              </div>
            </div>
          </section>
        </div>
        
      
      
      </div>
      
    </div>
  </body>
