{% extends 'admin/adminbase.html.twig' %}

{% block title %}Véhicule | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Véhicule</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_vehicule_new') }}" title="Ajout véhicule" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des véhicules
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Type</th>
                            <th class="text-center">Marque</th>
                            <th class="text-center">Modèle</th>
                            <th class="text-center">Immatriculation</th>
                            <th class="text-center">Date Circulation</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for vehicule in vehicules %}
                        <tr>
                            <td class="text-center">{{ vehicule.typeVehicule.NomTypeVehicule }}</td>
                            <td class="text-center">{{vehicule.marqueVehicule.NomMarqueVehicule}}</td>
                            <td class="text-center">{{vehicule.ModeleVehicule}}</td>
                            <td class="text-center">{{vehicule.immatriculation}}</td>
                            <td class="text-center">{{vehicule.dateCirculation ? vehicule.dateCirculation|date('d-m-Y'):' '}}</td>
                            <td class="text-center">
                                <a href="{{ path('app_admin_vehicule_show', {'id': vehicule.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="6">
                            <a href="{{ path('app_admin_vehicule_new') }}" class="btn btn-primary" title="Ajout vehicule" >Ajouter vehicule <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
