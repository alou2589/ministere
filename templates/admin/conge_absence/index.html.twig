{% extends './admin/adminbase.html.twig' %}

{% block title %}Congé Absence | {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Congé Absence</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_conge_absence_new') }}" title="Ajout Congé - Absence" ><i class="fas fa-fw fa-plus-circle"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <p class="text-muted font-13 m-b-30">
                                Liste des congés ou absences
                            </p>
                            <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">Id</th>
                                        <th class="text-center">Agent</th>
                                        <th class="text-center">Matricule</th>
                                        <th class="text-center">Durée</th>
                                        <th class="text-center">Informations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for conge_absence in conge_absences %}
                                    <tr>
                                        <td class="text-center">{{ conge_absence.id }}</td>
                                        <td class="text-center">{{ conge_absence.statutAgent.agent.prenom }} {{ conge_absence.statutAgent.agent.nom }} </td>
                                        <td class="text-center">{{ conge_absence.statutAgent.matricule }}</td>
                                        <td class="text-center">{{ conge_absence.nombreJour }}</td>
                                        <td class="text-center">
                                            <a href="{{ path('app_admin_conge_absence_show', {'id': conge_absence.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">
                                            <a href="{{ path('app_admin_conge_absence_new') }}" class="btn btn-primary" title="Ajout Congé - Absence" >Ajouter Fichier <i class="fas fa-fw fa-plus-circle"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
