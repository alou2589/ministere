{% extends './admin/adminbase.html.twig' %}

{% block title %}Type de Matériel | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
              <div class="x_title">
                <h2>{{ type_materiel.NomTypeMatos}}</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_type_materiel_liste', {'id': type_materiel.id}) }}" class="text-decoration-none float-left m-1" title="Liste des {{type_materiel.NomTypeMatos}}"><i class="fas fa-list text-info"></i> </a> 
                    </li>
                    <li>
                        <a type="button" class="collapse-link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                        {% include "./admin/type_materiel/delete.html.twig" %}
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_type_materiel_edit', {'id': type_materiel.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_type_materiel_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
              </div>
            </div>
        </div>
    </div>
            
    <div class="row">
        <div class="col-md-6 col-sm-12 ">
            <div class="x_panel">
              <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="p-1">
                            <h2>Informations</h2>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <p><strong>Id</strong>: {{ type_materiel.id }}</p>
                                </li>
                                <li class="list-group-item">
                                    <p><strong>Type de Matériel</strong>: {{ type_materiel.NomTypeMatos }}</p>
                                </li>
                                <li class="list-group-item">
                                    <p><strong> Catégorie de Matériel </strong>: {{ type_materiel.categorieMatos.NomCategorieMatos }}</p>
                                </li>
                            </ul>                            
                        </div>
                    </div>
                </div>
              </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 ">
            <div class="x_panel">
              <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="p-1">
                            <h2>Informations Supplémentaires</h2>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <p><strong>Total: </strong>: {{ type_materiel.materiels|length }}</p>
                                </li>
                                <li class="list-group-item">
                                    <p><strong>En Stock: </strong>: 
                                        {% for mato in type_materiel.materiels %}
                                            
                                        {% endfor %}
                                    </p>
                                </li>
                                <li class="list-group-item">
                                    <p><strong> Attribués </strong>: {{ type_materiel.NomCategorieMatos }}</p>
                                </li>
                            </ul>                            
                        </div>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </div>
{% endblock %}
