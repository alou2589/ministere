{% extends './admin/adminbase.html.twig' %}

{% block title %}{{type_materiel.NomTypeMatos}} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>{{type_materiel.NomTypeMatos}}</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_type_materiel_show', {'id': type_materiel.id}) }}" title="{{ type_materiel.NomTypeMatos }}" ><i class="fas fa-fw fa-home"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                    <p class="text-muted font-13 m-b-30">
                        Liste des <strong class="text-primary">{{type_materiel.NomTypeMatos}}s</strong> 
                    </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Id</th>
                            <th class="text-center">Marque</th>
                            <th class="text-center">Modele</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for matos in type_materiel.materiels %}
                            <tr>
                                <td class="text-center">{{ matos.id }}</td>
                                <td class="text-center">{{matos.marqueMatos.NomMarqueMatos}}</td>
                                <td class="text-center">{{matos.ModeleMatos}}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_admin_materiel_show', {'id': matos.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                              <td class="text-center" colspan="4">
                                Pas de données
                              </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
