
<table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
  <thead>
      <tr>
          <th class="text-center">Id</th>
          <th class="text-center">Marque</th>
          <th class="text-center">Modele</th>
          <th class="text-center">Information</th>
      </tr>
  </thead>
  <tbody>
      {% for matos in type_materiel.materiels %}
          <tr>
              <td class="text-center">{{ matos.id }}</td>
              <td class="text-center">{{matos.marqueMatos.NomMarqueMatos}}</td>
              <td class="text-center">{{matos.ModeleMatos}}</td>
              <td class="text-center">
                  <a href="{{ path('app_admin_materiel_show', {'id': matos.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
              </td>
          </tr>
      {% else %}
          <tr>
            <td class="text-center" colspan="4">
              Pas de données
            </td>
          </tr>
      {% endfor %}
  </tbody>
</table>
