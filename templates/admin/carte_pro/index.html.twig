{% extends './admin/adminbase.html.twig' %}

{% block title %}Carte Professionnelle | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Carte Professionnelle</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_carte_pro_new') }}" title="Ajout Carte Professionnelle" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des cartes professionnelles 
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th class="text-center">Id</th>
                            <th class="text-center">Agent</th>
                            <th class="text-center">Date Délivrance</th>
                            <th class="text-center">Date d'expiration</th>
                            <th class="text-center">Statut </th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for carte_pro in carte_pros %}
                        <tr>
                            <td>
                              {% set dateExpiration = date(carte_pro.dateExpiration|date("d-m-Y") )%}
                              {% set today = date("now"|date('d-m-Y')) %}
                              {% set periode = dateExpiration.diff(today) %}
                              {% if periode.m <= 3 %}
                                <i class="fas fa-exclamation-triangle text-warning" title="Procèder au renouvellement de la carte" aria-hidden="true"></i>
                              {% elseif periode.y >= 4 %}
                                <i class="fas fa-bell text-danger" title="La carte n'est plus valide"></i>
                                {{ carte_pro.statusImpression == false}}
                              {% else %}
                                <i class="fas fa-check-circle text-success"  aria-hidden="true"></i>
                              {% endif %}
                            </td>
                            <td class="text-center">{{ carte_pro.id }}</td>
                            <td class="text-center">{{ carte_pro.agent.Prenom }} {{ carte_pro.agent.Nom }} - {{ carte_pro.agent.Matricule }} </td>
                            <td class="text-center">{{carte_pro.DateDelivrance ? carte_pro.DateDelivrance|date('d-m-Y'):' '}}</td>
                            <td class="text-center">{{carte_pro.DateExpiration ? carte_pro.DateExpiration|date('d-m-Y'):' '}}</td>
                          
                            <td class="text-center">
                            {% if carte_pro.statusImpression == true %}
                                <input type="checkbox" class="js-switch" disabled="disabled" checked="checked" />
                            {% else %}
                                <input type="checkbox" class="js-switch" disabled="disabled" />
                            {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_admin_carte_pro_show', {'id': carte_pro.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                            </td>   
                        </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="7">
                            <a href="{{ path('app_admin_carte_pro_new') }}" class="btn btn-primary" title="Ajout Carte Professionnelle" >Ajouter Carte Professionnelle <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
