{% extends 'admin/adminbase.html.twig' %}

{% block title %}Affectation Véhicule| {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Afffectation Véhicule</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_affectation_vehicule_new') }}" title="Affectation Véhicule" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des affectations véhicules
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Agent</th>
                            <th class="text-center">Matricule</th>
                            <th class="text-center">Fonction</th>
                            <th class="text-center">Véhicule</th>
                            <th class="text-center">Immatriculation</th>
                            <th class="text-center">État Véhicule</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for affectation_vehicule in affectation_vehicules %}
                            <tr>
                                <td class="text-center">{{ affectation_vehicule.affectation.statutAgent.agent.Prenom }} {{ affectation_vehicule.affectation.statutAgent.agent.Nom }}</td>
                                <td class="text-center">{{ affectation_vehicule.affectation.statutAgent.Matricule }} </td>
                                <td class="text-center">{{ affectation_vehicule.affectation.statutAgent.Fonction }} </td>
                                <td class="text-center">
                                    {{ affectation_vehicule.vehicule.typeVehicule.nomTypeVehicule }} {{ affectation_vehicule.vehicule.marqueVehicule.nomMarqueVehicule}}
                                    {{ affectation_vehicule.vehicule.modeleVehicule }}
                                </td>
                                <td class="text-center">{{ affectation_vehicule.vehicule.immatriculation }} </td>
                                <td class="text-center">{{ affectation_vehicule.etatVehicule.nomEtatVehicule }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_admin_affectation_vehicule_show', {'id': affectation_vehicule.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                                </td>
                            </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="7">
                            <a href="{{ path('app_admin_affectation_vehicule_new') }}" class="btn btn-primary" title="Affecter Véhicule" >Affecter Véhicule <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
