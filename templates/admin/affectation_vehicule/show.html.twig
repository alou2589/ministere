
{% extends 'admin/adminbase.html.twig' %}

{% block title %}Affectation Véhicule | {{ parent() }}{% endblock %}

{% block body %}
<div class="">
    <div class="col-md-12 col-sm-12  ">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-bars"></i> Affectation </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    {% if is_granted("ROLE_INFO_ADMIN")== true %}
                        <li>
                            <a type="button" data-toggle="modal" data-target=".bs-example-modal-lg" class="link text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                            {% include "admin/affectation_vehicule/delete.html.twig" %}
                        </li>
                        <li>
                            <a href="{{ path('app_admin_affectation_vehicule_edit', {'id': affectation_vehicule.id}) }}"  class="link text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                        </li>
                    {% endif %}
                    <li>
                        <a href="{{ path('app_admin_affectation_vehicule_index') }}" class="link text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fsa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Informations</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <p><strong>Id</strong>: {{ affectation_vehicule.id }}</p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Type de Véhicule</strong>: {{ affectation_vehicule.vehicule.typeVehicule.nomTypeVehicule }}</p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Marque du Véhicule</strong>: {{ affectation_vehicule.vehicule.marqueVehicule.nomMarqueVehicule }}</p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Modèle du Véhicule</strong>: {{ affectation_vehicule.vehicule.modeleVehicule }}</p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Numéro Immatriculation</strong>: {{ affectation_vehicule.vehicule.immatriculation }}</p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Nom Complet Agent</strong>: {{ affectation_vehicule.affectation.statutAgent.agent.prenom }} {{affectation_vehicule.affectation.statutAgent.agent.nom}} </p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Matricule de l'agent</strong>: {{affectation_vehicule.affectation.statutAgent.matricule}} </p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Fonction de l'affectaire</strong>: {{ affectation_vehicule.affectation.statutAgent.fonction }} </p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Date d'affectation</strong>: {{ affectation_vehicule.dateAffectationVehicule ? affectation_vehicule.dateAffectationVehicule|date('d-m-Y') : '' }} </p>
                            </li>
                            <li class="list-group-item">
                                <p><strong>Status</strong>: {{ affectation_vehicule.etatVehicule.nomEtatVehicule }}</p>
                            </li>
                        </ul>      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
{% endblock %}









  
                                                                
                                                                
                                                                   