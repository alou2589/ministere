{% extends './admin/adminbase.html.twig' %}

{% block title %}Affectation | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>affectation</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_affectation_new') }}" title="Ajout Affectation" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des affectations 
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Agent</th>
                            <th class="text-center">Matricule</th>
                            <th class="text-center">Matériel </th>
                            <th class="text-center">Date d'affectation</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for affectation in affectations %}
                            <tr>
                                <td class="text-center">{{ affectation.statutAgent.agent.Prenom }} {{ affectation.statutAgent.agent.Nom }}</td>
                                <td class="text-center">{{ affectation.statutAgent.Matricule }} </td>
                                <td class="text-center">{{ affectation.sousStructure.descriptionSousStructure }}</td>
                                <td class="text-center">{{affectation.dateAffectation ? affectation.dateAffectation|date('d-m-Y'):' '}}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_admin_affectation_show', {'id': affectation.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                                </td>
                            </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="7">
                            <a href="{{ path('app_admin_affectation_new') }}" class="btn btn-primary" title="Ajout affectation" >Ajouter affectation <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
