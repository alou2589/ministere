{% extends './admin/adminbase.html.twig' %}

{% block title %}Maintenance Matériel | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Maintenance</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a type="button" class="link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                    {% include "./admin/maintenance/delete.html.twig" %}
                </li>
                <li>
                    <a class="link" href="{{ path('app_admin_maintenance_edit', {'id': maintenance.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                </li>
                <li>
                    <a class="link" href="{{ path('app_admin_maintenance_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <p class="text-muted font-13 m-b-30">
                        {{ maintenance.matos.ModeleMatos}}.
                        </p>
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 col-xs-12 mr-2">
                                        <div class="card o-hidden border-0 shadow-lg my-5">
                                            <div class="card-body p-1">
                                                <div class="row">
                                                    <div class="col-lg-10 col-xs-12 mx-auto">
                                                        <div class="p-1">
                                                            <ul class="list-group">
                                                                <li class="list-group-item">
                                                                    <p><strong>Id</strong>: {{ maintenance.id }}</p>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Numéro de Série du Matériel</strong>: {{ maintenance.matos.SnMatos }}</p>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Marque du Matériel</strong>: {{ maintenance.matos.MarqueMatos.nomMarqueMatos }}</p>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Modèle du Matériel</strong>: {{ maintenance.matos.ModeleMatos }}</p>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Date de début</strong>: {{ maintenance.dateMaintenance ? maintenance.dateMaintenance|date('d-m-Y') : '' }}</p>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Date de fin</strong>: {{ maintenance.dateSortie ? maintenance.dateSortie|date('d-m-Y') : '' }}</p>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Détail</strong>:</p>
                                                                    {{ maintenance.detailMaintenance|raw }}
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Status</strong>:</p>
                                                                    {{ maintenance.statusMatos|raw }}
                                                                </li>
                                                            </ul>                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}

