{% extends './admin/adminbase.html.twig' %}

{% block title %}Sous Structure | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Sous Structure</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_sous_structure_new') }}" title="Ajout Sous Structure" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des Sous Structures 
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Id</th>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Type de sous structure</th>
                            <th class="text-center">Structure</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for sous_structure in sous_structures %}
                        <tr>
                            <td class="text-center">{{ sous_structure.id }}</td>
                            <td class="text-center">{{ sous_structure.NomSousStructure }}</td>
                            <td class="text-center">{{sous_structure.typeSousStructure.NomTypeSousStructure}}</td>
                            <td class="text-center">{{sous_structure.structure.NomStructure}}</td>
                            <td class="text-center">
                                <a href="{{ path('app_admin_sous_structure_show', {'id': sous_structure.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="text-center" colspan="5">Pas de données</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
