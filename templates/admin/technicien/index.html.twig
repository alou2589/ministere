{% extends './admin/adminbase.html.twig' %}

{% block title %}Technicien | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Technicien</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_technicien_new') }}" title="Ajout Technicien" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des agents et leur statut
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Id</th>
                            <th class="text-center">Agent</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for technicien in techniciens %}
                        <tr>
                            <td class="text-center">{{ technicien.id }}</td>
                            <td class="text-center">{{ technicien.infoTechnicien.agent.Prenom }} {{ technicien.infoTechnicien.agent.Nom }} - {{ technicien.infoTechnicien.agent.Matricule }} </td>
                            <td class="text-center">
                                <a href="{{ path('app_admin_technicien_show', {'id': technicien.id}) }}"><i class="fas fa-eye text-info" title="DÃ©tails"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="3">
                            <a href="{{ path('app_admin_technicien_new') }}" class="btn btn-primary" title="Ajout Technicien" >Ajouter Technicien <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
