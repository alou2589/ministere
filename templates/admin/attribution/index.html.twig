{% extends './admin/adminbase.html.twig' %}

{% block title %}Attribution | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Attribution</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_attribution_new') }}" title="Ajout Attribution" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des attributions 
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Status</th>
                            <th class="text-center">Agent</th>
                            <th class="text-center">Matricule</th>
                            <th class="text-center">Type </th>
                            <th class="text-center">Marque </th>
                            <th class="text-center">Modèle </th>
                            <th class="text-center">S.N </th>
                            <th class="text-center">Caractéristiques </th>
                            <th class="text-center">Attribué le</th>
                            <th class="text-center">Info</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for attribution in attributions %}
                        <tr>
                            <td class="text-center">
                            {% set maintenances = attribution.matos.maintenances %}
                            {% if maintenances|length == 0 %}
                              <i class="fas fa-check-circle text-success"></i>
                            {% else %}
                              {% for maintenance in maintenances %}
                                {% if maintenance.statusMatos == "En Cours" %}
                                  <i class="fas fa-exclamation-triangle text-warning" title="Maintenance en cours"></i><br>
                                {% elseif maintenance.statusMatos == "Effectuer" %}
                                  <i class="fas fa-check-circle text-success"></i>
                                {% else %}
                                  <i class="fas fa-tools text-danger" title="Amorti"></i>
                                {% endif %}
                              {% endfor %}
                            {% endif %}
                            </td>
                            <td class="text-center">
                                {{ attribution.affectation.statutAgent.agent.Prenom }} {{ attribution.affectation.statutAgent.agent.Nom }}
                            </td>
                            <td class="text-center">
                                {{ attribution.affectation.statutAgent.Matricule }}
                            </td>
                            <td class="text-center">{{ attribution.matos.typeMatos.NomTypeMatos }}</td>
                            <td class="text-center">{{ attribution.matos.marqueMatos.NomMarqueMatos }}</td>
                            <td class="text-center">{{ attribution.matos.modeleMatos }}</td>
                            <td class="text-center">{{ attribution.matos.snMatos }}</td>
                            <td class="text-center">
                                {% if attribution.matos.infoMatos|length >50 %}
                                    {{ attribution.matos.infoMatos|slice(0,50) }}...
                                {% else %}
                                    {{ attribution.matos.infoMatos }}
                                {% endif %}

                            </td>
                            <td class="text-center">{{attribution.dateAttribution ? attribution.dateAttribution|date('d-m-Y'):' '}}</td>
                            <td class="text-center">
                                <a href="{{ path('app_admin_attribution_show', {'id': attribution.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                            </td>   
                        </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="7">
                            <a href="{{ path('app_admin_attribution_new') }}" class="btn btn-primary" title="Ajout Attribution" >Ajouter Attribution <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
