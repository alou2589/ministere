{% extends './admin/adminbase.html.twig' %}

{% block title %}attribution | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
              <div class="x_title">
                <h2>attribution</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a type="button" class="link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                        {% include "./admin/attribution/delete.html.twig" %}
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_attribution_showcode', {'id': attribution.id}) }}"  class="text-decoration-none float-left m-1" title="Afficher le code d'attribution"> <i class="fas fa-qrcode text-info"></i> </a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_attribution_edit', {'id': attribution.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_attribution_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <p class="text-muted font-13 m-b-30">
                              {{ attribution.matos.typeMatos.NomTypeMatos}} attribué à {{ attribution.agent.prenom }} {{attribution.agent.nom}} - {{attribution.agent.Matricule}}.
                            </p>
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-10 col-xs-12 mr-2">
                                            <div class="card o-hidden border-0 shadow-lg my-5">
                                                <div class="card-body p-1">
                                                    <div class="row">
                                                        <div class="col-lg-10 col-xs-12 mx-auto">
                                                            <div class="p-1">
                                                                <ul class="list-group">
                                                                    <li class="list-group-item">
                                                                        <p><strong>Id</strong>: {{ attribution.id }}</p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Nom Complet Agent</strong>: {{ attribution.agent.prenom }} {{attribution.agent.nom}}-{{attribution.agent.matricule}} </p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Marque et Modèle</strong>: {{ attribution.matos.marqueMatos.NomMarqueMatos }} {{ attribution.matos.ModeleMatos}} </p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Numéro de Série</strong>: {{ attribution.matos.SnMatos }}</p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Date d'attribution</strong>: {{ attribution.dateAttribution ? attribution.dateAttribution|date('d-m-Y') : '' }} </p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Service</strong>: {{ attribution.agent.sousStructure.NomSousStructure }}</p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Caractéristiques du Matériel</strong>: 
                                                                            <a type="button" class="link" data-toggle="modal" data-target=".info-example-modal-lg" class="text-decoration-none float-left m-1" title="Information">Voir les Informations <i class="fas fa-info text-danger"></i> </a>
                                                                            {% include "./admin/attribution/info_matos.html.twig" %}
                                                                        </p>
                                                                    </li>
                                                                </ul>                            
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </div>
{% endblock %}
