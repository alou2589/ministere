
<table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="text-center">Id</th>
            <th class="text-center">Matériel</th>
            <th class="text-center">Entrée</th>
            <th class="text-center">Sortie</th>
            <th class="text-center">Status</th>
            <th class="text-center">Informations</th>
        </tr>
    </thead>
    <tbody>
    {% for maintenance in attribution.matos.maintenances %}
        <tr>
            <td class="text-center">{{ maintenance.id }}</td>
            <td class="text-center">{{ maintenance.matos.marqueMatos.nomMarqueMatos}} {{ maintenance.matos.modeleMatos }} - {{ maintenance.matos.snMatos }} </td>
            <td class="text-center">{{ maintenance.dateMaintenance ? maintenance.dateMaintenance|date('Y-m-d') : '' }}</td>
            <td class="text-center">{{ maintenance.dateSortie ? maintenance.dateSortie|date('Y-m-d') : '' }}</td>
            <td class="text-center">{{ maintenance.statusMatos }}</td>
            <td class="text-center">
                <a href="{{ path('app_admin_maintenance_show', {'id': maintenance.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6" class="text-center">
                Pas de maintenance
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>