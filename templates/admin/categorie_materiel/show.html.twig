{% extends './admin/adminbase.html.twig' %}

{% block title %}Catégorie de Matériel | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Catégorie de Matériel</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="link" href="{{ path('app_admin_categorie_materiel_liste', {'id':categorie_materiel.id}) }}" class="text-decoration-none float-left m-1" title="Liste des {{categorie_materiel.NomCategorieMatos}}s"><i class="fas fa-list text-info"></i> </a> 
                </li>
                <li>
                    <a type="button" class="link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                    {% include "./admin/categorie_materiel/delete.html.twig" %}
                </li>
                <li>
                    <a class="link" href="{{ path('app_admin_categorie_materiel_edit', {'id': categorie_materiel.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                </li>
                <li>
                    <a class="link" href="{{ path('app_admin_categorie_materiel_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <p class="text-muted font-13 m-b-30">
                        {{ categorie_materiel.NomCategorieMatos}}.
                        </p>
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 col-xs-12 mr-2">
                                        <div class="card o-hidden border-0 shadow-lg my-5">
                                            <div class="card-body p-1">
                                                <div class="row">
                                                    <div class="col-lg-10 col-xs-12 mx-auto">
                                                        <div class="p-1">
                                                            <ul class="list-group">
                                                                <li class="list-group-item">
                                                                    <p><strong>Id</strong>: {{ categorie_materiel.id }}</p>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Catégorie de Matériel</strong>: {{ categorie_materiel.NomCategorieMatos }}</p>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <p><strong>Description</strong>:</p>
                                                                    {{ categorie_materiel.DescriptionCategorieMatos|raw }}
                                                                </li>
                                                            </ul>                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}

