{% extends './admin/adminbase.html.twig' %}

{% block body %}
<div class="row">
<div class="col-md-12 col-sm-12 ">
  <div class="x_panel">
    <div class="x_title">
      <h2>Catégorie Matériel</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li>
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li>
            <a href="{{ path('app_admin_categorie_materiel_new') }}" title="Ajout Catégorie de Matériel" ><i class="fas fa-fw fa-plus-circle"></i></a>
        </li> 
        <li>
            <a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <div class="row">
        <div class="col-sm-12">
          <div class="card-box table-responsive">
            <p class="text-muted font-13 m-b-30">
              Liste des Catégories de Matériel
            </p>
            <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
              <thead>
                  <tr>
                      <th class="text-center">Id</th>
                      <th class="text-center">Nom</th>
                      <th class="text-center">Informations</th>
                  </tr>
              </thead>
              <tbody>
              {% for categorie_materiel in categorie_materiels %}
                  <tr>
                      <td class="text-center">{{ categorie_materiel.id }}</td>
                      <td class="text-center">{{ categorie_materiel.nomCategorieMatos }}</td>
                      <td class="text-center">
                        <a href="{{ path('app_admin_categorie_materiel_show', {'id': categorie_materiel.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                      </td>
                  </tr>
              {% else %}
                  <tr>
                      <td colspan="3"><a href="{{ path('app_admin_categorie_materiel_new') }}" title="Ajout Catégorie de Matériel" ><i class="fas fa-fw fa-plus-circle"></i></a></td>
                  </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

{% endblock %}




