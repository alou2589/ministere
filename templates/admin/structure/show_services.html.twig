
<table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
  <thead>
      <tr>
          <th class="text-center">Id</th>
          <th class="text-center">Nom</th>
          <th class="text-center">Type de sous structure</th>
          <th class="text-center">Structure</th>
          <th class="text-center">Information</th>
      </tr>
  </thead>
  <tbody>
  {% for sous_structure in structure.sousStructures %}
      <tr>
          <td class="text-center">{{ sous_structure.id }}</td>
          <td class="text-center">{{ sous_structure.NomSousStructure }}</td>
          <td class="text-center">{{sous_structure.typeSousStructure.NomTypeSousStructure}}</td>
          <td class="text-center">{{sous_structure.structure.NomStructure}}</td>
          <td class="text-center">
              <a href="{{ path('app_admin_sous_structure_show', {'id': sous_structure.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
          </td>
      </tr>
  {% else %}
      <tr>
          <td class="text-center" colspan="5">Pas de données</td>
      </tr>
          
  {% endfor %}
  </tbody>
</table>