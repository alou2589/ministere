
<table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
          <th class="text-center">Prenom</th>
          <th class="text-center">Nom</th>
          <th class="text-center">Matricule</th>
          <th class="text-center">Service / Cellule / Bureau</th>
      </tr>
  </thead>
  <tbody>
  {% for sous_structure in structure.sousStructures %}
      {% for affectation in sous_structure.affectations %}
          <tr>
            <td class="text-center">{{ affectation.statutAgent.agent.Prenom }}</td>
            <td class="text-center">{{affectation.statutAgent.agent.Nom}}</td>
            <td class="text-center">{{affectation.statutAgent.Matricule}}</td>
            <td class="text-center">{{affectation.sousStructure.NomSousStructure}}</td>
          </tr>
    {% endfor %}
  {% else %}
      <tr>
          <td class="text-center" colspan="6">Pas de donn√©es</td>
      </tr>

  {% endfor %}
  </tbody>
</table>
