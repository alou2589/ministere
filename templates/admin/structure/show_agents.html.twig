
<table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
  <thead>
      <tr>
          <th class="text-center">Id</th>
          <th class="text-center">Prenom</th>
          <th class="text-center">Nom</th>
          <th class="text-center">Genre</th>
          <th class="text-center">Matricule</th>
          <th class="text-center">Service/Cellule/Bureau</th>
          <th class="text-center">Information</th>
      </tr>
  </thead>
  <tbody>
  {% for sous_structure in structure.sousStructures %}
      {% for agent in sous_structure.agents %}
          <tr>
              <td class="text-center">{{ agent.id }}</td>
              <td class="text-center">{{ agent.Prenom }}</td>
              <td class="text-center">{{agent.Nom}}</td>
              <td class="text-center">{{agent.Genre}}</td>
              <td class="text-center">{{agent.Matricule}}</td>
              <td class="text-center">{{agent.sousStructure.NomSousStructure}}</td>
              <td class="text-center">
                  <a href="{{ path('app_admin_agent_show', {'id': agent.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
              </td>
          </tr>
      {% else %}
          <tr>
              <td class="text-center" colspan="7">Pas de données</td>
          </tr>
          
    {% endfor %}
  {% endfor %}
  </tbody>
</table>
