{% extends './admin/adminbase.html.twig' %}

{% block title %}Structure | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
              <div class="x_title">
                <h2>Structure</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_structure_show_services', {'id': structure.id}) }}" class="text-decoration-none float-left m-1" title="Liste des Sous Strcutures"> <i class="fas fa-city text-info"></i> </a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_structure_show_agents', {'id': structure.id}) }}" class="text-decoration-none float-left m-1" title="Liste des Agents"> <i class="fas fa-users text-success"></i> </a>
                    </li>
                    {% if is_granted("ROLE_RH_ADMIN") %}
                        <li>
                            <a type="button" class="link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                            {% include "./admin/structure/delete.html.twig" %}
                        </li>
                        <li>
                            <a class="link" href="{{ path('app_admin_structure_edit', {'id': structure.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                        </li>
                        
                    {% endif %}
                    <li>
                        <a class="link" href="{{ path('app_admin_structure_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <p class="text-muted font-13 m-b-30">
                              {{ structure.NomStructure}}.
                            </p>
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-10 col-xs-12 mr-2">
                                            <div class="card o-hidden border-0 shadow-lg my-5">
                                                <div class="card-body p-1">
                                                    <div class="row">
                                                        <div class="col-lg-10 col-xs-12 mx-auto">
                                                            <div class="p-1">
                                                                <ul class="list-group">
                                                                    <li class="list-group-item">
                                                                        <p><strong>Id</strong>: {{ structure.id }}</p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Structure</strong>: {{ structure.NomStructure }}</p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Type de structure</strong>: {{ structure.TypeStructure.NomTypeStructure }}</p>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <p><strong>Description</strong>: {{ structure.DescriptionStructure|raw }}</p>
                                                                    </li>
                                                                </ul>                            
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </div>
{% endblock %}
