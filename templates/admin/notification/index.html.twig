{% extends 'base.html.twig' %}

{% block title %}Notification index{% endblock %}

{% block body %}
    <h1>Notification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date_notification</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td>{{ notification.id }}</td>
                <td>{{ notification.titre }}</td>
                <td>{{ notification.contenu }}</td>
                <td>{{ notification.dateNotification ? notification.dateNotification|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ notification.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_notification_show', {'id': notification.id}) }}">show</a>
                    <a href="{{ path('app_admin_notification_edit', {'id': notification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_notification_new') }}">Create new</a>
{% endblock %}
