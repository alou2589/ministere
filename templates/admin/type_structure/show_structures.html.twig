
<table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="text-center">Id</th>
            <th class="text-center">Nom Structure</th>
            <th class="text-center">Information</th>
        </tr>
    </thead>
    <tbody>
    {% for structure in type_structure.structures %}
        <tr>
            <td class="text-center">{{ structure.id }}</td>
            <td class="text-center">{{ structure.NomStructure }}</td>
            <td class="text-center">
                <a href="{{ path('app_admin_structure_show', {'id': structure.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td class="text-center" colspan="5">Pas de données</td>
        </tr>
            
    {% endfor %}
    </tbody>
</table>