{% extends './admin/adminbase.html.twig' %}

{% block title %}Materiel | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Materiel</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_materiel_index') }}" title="Accueil materiel" ><i class="fas fa-fw fa-home"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Modifier materiel
                  </p>
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-md-10 col-xs-12 mr-2">
                          <div class="card o-hidden border-0 shadow-lg my-5">
                            <div class="card-body p-1">
                              <div class="row">
                                <div class="col-lg-10 mx-auto">
                                  <div class="p-5">
                                    {{form_start(form, {'attr':{'class':'form'}})}}
                                        <div class="form-floating mb-3">
                                            {{form_row(form.type_matos, {'attr':{'class':"form-control js-example-basic-single", 'required':"required"}})}}
                                        </div>
                                        <div class="form-floating mb-3">
                                            {{form_row(form.marque_matos, {'attr':{'class':"form-control js-example-basic-single", 'required':"required"}})}}
                                        </div>
                                        <div class="form-floating mb-3">
                                          {{form_row(form.modele_matos, {'attr':{'class':"form-control", 'placeholder':"Modèle du Matériel", 'required':"required",}})}}
                                        </div>
                                        <div class="form-floating mb-3">
                                          {{form_row(form.sn_matos, {'attr':{'class':"form-control", 'placeholder':"Numéro de Série du Matériel", 'required':"required",}})}}
                                        </div>
                                        <div class="form-floating mb-3">
                                          {{form_row(form.date_reception, {'attr':{'class':"form-control js-datepicker", 'required':"required",}})}}
                                        </div>
                                        <div class="form-floating mb-3">
                                            {{form_row(form.fournisseur, {'attr':{'class':"form-control js-example-basic-single", 'required':"required"}})}}
                                        </div>
                                        <div class="form-floating mb-3">
                                          {{form_row(form.info_matos, {'attr':{'class':"form-control", 'placeholder':"Infomation", 'required':"required"}})}}
                                        </div>
                                        <div class="form-group">
                                          <button type="submit" class="btn btn-warning">Modifier <i class="fas fa-edit"></i> </button>
                                        </div>
                                    {{ form_end(form) }}
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
