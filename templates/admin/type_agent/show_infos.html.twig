 <div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-sm-6 mx-auto"><h2>Id: <strong>{{ type_agent.id }}</strong></h2></div>
            <div class="col-sm-6 mx-auto"><h2>Nom: <strong>{{ type_agent.NomTypeAgent }}</strong></h2></div>
        </div>
    </div>
</div>
<hr>
  {# ORDINATEUR PORTABLE #}
<div class="row">
{# Total #}
  <div class="animated flipInY col-lg-3 col-md-3 col-sm-3">
    <div class="tile-stats bg-success text-white">
      <div class="icon"><i class="fas fa-users text-white"></i></div>
      <div class="count text-white">
        {{ type_agent.statutAgents|length }}
      </div>
      <h3 class=" text-white">{{type_agent.NomTypeAgent}}</h3>
      <p class=" text-white">Nombre total {{ type_agent.NomTypeAgent}}.</p>
    </div>
  </div>
{# Total #}
  <div class="animated flipInY col-lg-2 col-md-2 col-sm-2">
    <div class="tile-stats bg-secondary text-white">
      <div class="icon"><i class="fas fa-male text-white"></i></div>
      <div class="count text-white">
        {{ hommes }}
      </div>
      <h3 class=" text-white">Hommes</h3>
      <p class=" text-white">Nombre total d'hommes.</p>
    </div>
  </div>
{# Total #}
  <div class="animated flipInY col-lg-2 col-md-2 col-sm-2">
    <div class="tile-stats bg-info text-white">
      <div class="icon"><i class="fas fa-female text-white"></i></div>
      <div class="count text-white">
        {{ femmes }}
      </div>
      <h3 class=" text-white">Femmes</h3>
      <p class=" text-white">Nombre total de femmes.</p>
    </div>
  </div>
</div>
