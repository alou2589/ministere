{% extends './admin/adminbase.html.twig' %}

{% block title %}Fichiers Agent | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Fichiers Agent</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_fichiers_agent_new') }}" title="Ajout Fichier" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des fichiers des agents 
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Id</th>
                            <th class="text-center">Agent</th>
                            <th class="text-center">Type de fichier</th>
                            <th class="text-center">Nom Fichier</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for fichiers_agent in fichiers_agents %}
                        <tr>
                            <td class="text-center">{{ fichiers_agent.id }}</td>
                            <td class="text-center">{{ fichiers_agent.agent.Prenom }} {{fichiers_agent.agent.Nom}} - {{fichiers_agent.agent.Matricule}}</td>
                            <td class="text-center">{{fichiers_agent.typeFichier.nomTypeFichier}}</td>
                            <td class="text-center">{{fichiers_agent.Fichier}}</td>
                            <td class="text-center">
                                <a href="{{ path('app_admin_fichiers_agent_show', {'id': fichiers_agent.id}) }}"><i class="fas fa-eye text-info" title="DÃ©tails"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="6">
                            <a href="{{ path('app_admin_fichiers_agent_new') }}" class="btn btn-primary" title="Ajout Fichier" >Ajouter Fichier <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
