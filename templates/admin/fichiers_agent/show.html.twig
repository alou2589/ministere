{% extends './admin/adminbase.html.twig' %}

{% block title %}Fichier | {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12 col-sm-12  ">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-info-circle"></i> {{fichiers_agent.agent.Prenom}} {{fichiers_agent.agent.Nom}} - {{fichiers_agent.agent.matricule}} </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    {% if is_granted("ROLE_RH_ADMIN")== true %}
                        <li>
                            <a class="link" href="#"  class="text-decoration-none float-left m-1" title="Visualiser le fichier"> <i class="fas fa-eye text-info"></i> </a>
                        </li>   
                        <li>
                            <a type="button" class="link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                            {% include "./admin/fichiers_agent/delete.html.twig" %}
                        </li>
                        <li>
                            <a class="link" href="{{ path('app_admin_fichiers_agent_edit', {'id': fichiers_agent.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                        </li>
                    {% endif %}
                    <li>
                        <a class="link" href="{{ path('app_admin_fichiers_agent_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Informations</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Fichier</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <p><strong>Id</strong>: {{ fichiers_agent.id }}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Nom Complet</strong>: {{ fichiers_agent.agent.Prenom}} {{ fichiers_agent.agent.Nom }}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Matricule</strong>: {{ fichiers_agent.agent.Matricule }}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Type de fichier</strong>: {{ fichiers_agent.typefichier.nomTypeFichier }}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Nom du fichier</strong>: {{fichiers_agent.nomFichier}}</p>
                        </li>
                    </ul>    
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        {% include "./admin/fichiers_agent/show_file.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
{% endblock %}  
