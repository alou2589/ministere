{% extends './admin/adminbase.html.twig' %}

{% block title %}Type Absence | {{ parent() }}{% endblock %}

{% block body %}
    <div class="">
        <div class="col-md-12 col-sm-12  ">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-bars"></i> {{type_absence.nomTypeAbsence}} </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        {% if is_granted("ROLE_SUPER_ADMIN")== true %}
                            <li>
                                <a  href="{{ path('app_admin_type_absence_delete', {'id': type_absence.id}) }}" class="link text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                            </li>
                            <li>
                                <a  href="{{ path('app_admin_type_absence_edit', {'id': type_absence.id}) }}"  class="link text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('app_admin_type_absence_index') }}" class="link text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fas fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Informations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Agents</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-sm-6 mx-auto"><h2>Id: <strong>{{ type_absence.id }}</strong></h2></div>
                                        <div class="col-sm-6 mx-auto"><h2>Nom: <strong>{{ type_absence.NomTypeAbsence }}</strong></h2></div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            {# % include "./admin/type_absence/show_infos.html.twig" %#}
                            
                        </div>
                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            {# % include "./admin/type_absence/show_type_absences.html.twig" %#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
