{% extends 'base.html.twig' %}

{% block title %}Historiques index{% endblock %}

{% block body %}
    <h1>Historiques index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type_action</th>
                <th>Date_action</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for historique in historiques %}
            <tr>
                <td>{{ historique.id }}</td>
                <td>{{ historique.typeAction }}</td>
                <td>{{ historique.dateAction ? historique.dateAction|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_historiques_show', {'id': historique.id}) }}">show</a>
                    <a href="{{ path('app_admin_historiques_edit', {'id': historique.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_historiques_new') }}">Create new</a>
{% endblock %}
